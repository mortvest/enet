#!/bin/bash
ARTICLE=`curl -s "http://ordnet.dk/ddo/ordbog?query=$1" | grep 'tekstmedium allow' | head -2 | tail -1 | grep -oh "n,\|t," | sed 's/.$//'`

if [ "$ARTICLE" = "t" ] || [ "$ARTICLE" = "et" ]; then
    echo "et"
elif [ "$ARTICLE" = "n" ] || [ "$ARTICLE" = "en" ]; then
    echo "en"
else
    echo "Word not found! Check spelling and try again."    
fi
